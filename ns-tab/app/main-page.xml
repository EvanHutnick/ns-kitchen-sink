<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <TabView>
    <TabView.items>
      <TabViewItem title="Widgets">
        <TabViewItem.view>
          <ScrollView>
            <StackLayout cssClass="tab-content">
              <Label text="Here you can browse through different widgets to see what type of functionality they have and examples of interacting with them." textWrap="true"/>
              <Button tap="buttonTap" text="Button Test" />
              <Button tap="actionBarTap" text="Action Bar Test"/>
              <Button tap="dialogsTap" text="Dialogs Test"/>
              <Button tap="htmlTap" text="HTML Test"/>
              <Button tap="imageTap" text="Image Test"/>
              <Button tap="listpickerTap" text="List Picker Test"/>
              <Button tap="listviewTap" text="List View Test"/>
              <Button tap="progressTap" text="Progress Test"/>
              <Button tap="repeaterTap" text="Repeater Test"/>
            </StackLayout>
          </ScrollView>
        </TabViewItem.view>
      </TabViewItem>
      <TabViewItem title="Framework">
        <TabViewItem.view>
          <StackLayout cssClass="tab-content">
            <Label text="Here you see more framework-related functionality, like data access, for example." textWrap="true"/>
          </StackLayout>
        </TabViewItem.view>
      </TabViewItem>
    </TabView.items>
  </TabView>
</Page>
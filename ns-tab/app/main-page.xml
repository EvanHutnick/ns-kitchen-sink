<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <TabView>
    <TabView.items>
      <TabViewItem title="Widgets">
        <TabViewItem.view>
          <ScrollView>
            <StackLayout cssClass="tab-content">
              <Label text="Here you can browse through different widgets to see what type of functionality they have and examples of interacting with them." textWrap="true"/>
              <Button tap="buttonTap" text="Buttons" />
              <Button tap="actionBarTap" text="Action Bar"/>
              <Button tap="dialogsTap" text="Dialogs"/>
              <Button tap="htmlTap" text="HTML"/>
              <Button tap="imageTap" text="Images"/>
              <Button tap="inputsTap" text="Inputs"/>
              <Button tap="listpickerTap" text="List Picker/SearchBar"/>
              <Button tap="listviewTap" text="ListView"/>
              <Button tap="progressTap" text="Progress/Slider"/>
              <Button tap="repeaterTap" text="Repeater"/>
            </StackLayout>
          </ScrollView>
        </TabViewItem.view>
      </TabViewItem>
      <TabViewItem title="Framework">
        <TabViewItem.view>
          <StackLayout cssClass="tab-content">
            <Label text="Here you see more framework-related functionality, like data access, for example." textWrap="true"/>
          </StackLayout>
        </TabViewItem.view>
      </TabViewItem>
    </TabView.items>
  </TabView>
</Page>
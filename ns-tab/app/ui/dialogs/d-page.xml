<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <StackLayout cssClass="spaceSides">
    <Button text="Action" tap="tapAction" cssClass="spaceTop" />
    <StackLayout orientation="horizontal" cssClass="spaceBottom">
      <Label text="Action choice: " />
      <!-- ^^ is a plain label, nothing fancy, but organized in a horizontal stackpanel so they appear next to one another -->
      <Label text="{{ actionChoice }}"/>
      <!-- ^^ is a label bound to a ViewModel property -->
    </StackLayout>
    <Button text="Confirm" tap="tapConfirm" />
    <StackLayout orientation="horizontal" cssClass="spaceBottom">
      <Label text="Confirm choice: " />
      <Label text="{{ confirmChoice }}"/>
    </StackLayout>
    <Button text="Alert" tap="tapAlert" />
    <Button text="Login" tap="tapLogin" />
    <Button text="Prompt" tap="tapPrompt" />

  </StackLayout>
</Page>
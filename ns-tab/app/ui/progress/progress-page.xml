<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <StackLayout cssClass="demo-page-content">
    <Label text="The Slider and Progress widgets below are bound to the same value, so changing the Slider will show the same value represented in the Progress indicator. " textWrap="true" cssClass="spaceBottom" />

    <StackLayout orientation="horizontal" cssClass="spaceBottom">
      <Label text="Current Value: "/>
      <Label text="{{ currentValue }}"/>
    </StackLayout>
    
    <Progress maxValue="{{ maxValue }}" value="{{ currentValue }}" cssClass="spaceBottom"/>

    <Slider maxValue="{{ maxValue }}" value="{{ currentValue }}" minValue="0"/>
    
  </StackLayout>
</Page>

